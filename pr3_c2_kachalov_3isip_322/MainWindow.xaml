<Window x:Class="pr3_c2_kachalov_3isip_322.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr3_c2_kachalov_3isip_322"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Расстояние в метрах:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="InputDistance" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,10,0,0" Width="100"/>

        <Label Content="Время в секундах:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>
        <TextBox x:Name="InputTime" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,40,0,0" Width="100"/>

        <Label Content="Единицы измерения скорости:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <RadioButton x:Name="RadioMetersPerSecond" Content="м/с" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,70,0,0" GroupName="Units"/>
        <RadioButton x:Name="RadioKilometersPerHour" Content="км/ч" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,100,0,0" GroupName="Units"/>

        <Button x:Name="CalculateButton" Content="Вычислить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" Width="100" Click="CalculateButton_Click"/>

        <Label Content="Скорость ветра:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,160,0,0"/>
        <TextBox x:Name="OutputResult" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,160,0,0" Width="100" IsReadOnly="True"/>
    </Grid>
</Window>
